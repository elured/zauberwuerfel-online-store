<h1>Profil</h1>
<div class="row">
    <div class="col s4">
        {{#if user.avatarUrl}}
        <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>Es gibt kein Bild</p>
        {{/if}}
    </div>
    <!--https://i1.wp.com/frugaling.org/wp-content/uploads/2015/07/albert_einstein.jpeg-->
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ihre Email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ihr Name </label>
                <span class="helper-text" data-error="Geben Sie einen Namen ein"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Profilbild</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Ã„ndern</button>

        </form>
    </div>
</div>