<h1>Einkaufswagen</h1>
<div id="card">
    {{#if cubes.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Anzahl</th>
                <th>Handlungen</th>
            </tr>
        </thead>
        <tbody>

            {{#each cubes}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Löschen</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Preis: <span class="price">{{price}}</span></strong></p>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Bestellen</button>
    </form>
    {{else}}
    <p>Sie haben noch nichts in den Einkaufswagen hinzugefügt</p>
    {{/if}}
</div>