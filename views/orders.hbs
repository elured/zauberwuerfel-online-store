<h1>Bestellungen</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    Bestellung <small>{{_id}}</small>
                </span>

                <p>Datum: <span class="date">{{date}}</span></p>
                <p><em>{{user.userId.name}}</em>: {{user.userId.email}}</p>

                <ol>
                    {{#each cubes}}
                    <li>
                        {{cube.title}} (* <strong>{{count}}</strong>)
                    </li>
                    {{/each}}
                </ol>
                <hr>

                <p>Preis: <span class="price">{{price}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Es gibt keine Bestellen</p>
{{/if}}