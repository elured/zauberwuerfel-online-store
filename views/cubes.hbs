<h1>Alle Zauberwürfel</h1>
{{#if cubes.length}}
{{#each cubes}}
<div class="row">
    <div class="col s4 offset-s3" style="width: fit-content;">
        <div class="card">
            <div class="card-image" style="max-width: 500px;">
                <img src="{{img}}" alt="{{title}}">
            </div>
            <div class="card-content"><span class="card-title">{{title}}</span>
                <p>Preis: <span class="price">{{price}}</span> </p>
            </div>
            <div class="card-action actions">
                <a href="/cubes/{{id}}" target="_blank">Zum Zauberwürfel</a>
                {{#if @root.isAuth}}
                <a href="/cubes/{{id}}/edit?allow=true">Überarbeiten</a>
                <form action="/card/add" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-primary">Kaufen</button>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Es gibt keinen Zauberwürfel</p>
{{/if}}